{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>Diaoul/home-ops//.github/renovate/autoMerge.json5",
    "github>Diaoul/home-ops//.github/renovate/customManagers.json5",
    "github>Diaoul/home-ops//.github/renovate/grafanaDashboards.json5",
    "github>Diaoul/home-ops//.github/renovate/groups.json5",
    "github>Diaoul/home-ops//.github/renovate/labels.json5",
    "github>Diaoul/home-ops//.github/renovate/semanticCommits.json5",
    ":enablePreCommit",
    ":automergeDigest",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Paris)",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  ignorePaths: ["**/*.sops.*", "**/resources/**"],
  flux: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  helmfile: {
    managerFilePatterns: [
      "/(^|/)helmfile\\.ya?ml(?:\\.gotmpl)?(?:\\.j2)?$/",
      "/(^|/)helmfile\\.d/.+\\.ya?ml(?:\\.gotmpl)?(?:\\.j2)?$/",
    ],
  },
  kubernetes: {
    managerFilePatterns: ["/(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  kustomize: {
    managerFilePatterns: ["/^kustomization\\.ya?ml(?:\\.j2)?$/"],
  },
}
