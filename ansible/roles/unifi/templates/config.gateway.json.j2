{
    "interfaces": {
        "ethernet": {
            "eth0": {
                "dhcp-options": {
                    "client-option": [
                        "retry 60;",
                        "send vendor-class-identifier &quot;neufbox&quot;;"
                    ]
                }
            }
        }
    },
    "protocols": {
        "bgp": {
            "64512": {
                "neighbor": {
                    "10.0.3.24": {
                        "remote-as": "64512"
                    },
                    "10.0.3.25": {
                        "remote-as": "64512"
                    },
                    "10.0.3.26": {
                        "remote-as": "64512"
                    },
                    "10.0.3.27": {
                        "remote-as": "64512"
                    }
                },
                "parameters": {
                    "router-id": "10.0.3.1"
                }
            }
        }
    },
    "service": {
        "dns": {
            "dynamic": {
                "interface": {
                    "eth0": {
                        "service": {
                            "custom-cloudflare": {
                                "host-name": [
                                    "{{ unifi_domain }}"
                                ],
                                "login": "{{ unifi_email }}",
                                "options": [
                                    "zone={{ unifi_domain }}"
                                ],
                                "password": "{{ unifi_cloudflare_global_api_key }}",
                                "protocol": "cloudflare",
                                "server": "api.cloudflare.com/client/v4"
                            }
                        }
                    }
                }
            },
            "forwarding": {
                "options": [
                    "server=/{{ unifi_domain }}/10.44.0.4",
                    "server=/cluster.milkyway/10.44.0.4",
                    "server=1.1.1.1",
                    "server=1.0.0.1"
                ]
            }
        }
    },
