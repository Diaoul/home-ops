---
apiVersion: operator.tigera.io/v1
kind: Installation
metadata:
  name: default
spec:
  calicoNetwork:
    ipPools:
    - blockSize: 26
      cidr: {{ calico_installation.cidr }}
      encapsulation: None
      natOutgoing: Enabled
      nodeSelector: all()
    nodeAddressAutodetectionV4:
      cidrs:
        - {{ calico_installation.autodetect_cidr }}
  nodeMetricsPort: 9091
  typhaMetricsPort: 9093
